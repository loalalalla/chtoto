<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="15">
        <ListBox Name="StudentsList" FontSize="25" >
           <ListBoxItem>Первый дежурный: </ListBoxItem>
           <ListBoxItem>Второй дежурный: </ListBoxItem>
           <ListBoxItem>Третий дежурный: </ListBoxItem>
       </ListBox>
        
        <StackPanel Margin= "0 5 0 0" Orientation="Horizontal">
            <Button Padding="5" FontSize="25" Margin="0 0 5 0" Click="BtnGen_OnClick" Name="BtnGen">Сгенерировать</Button>
            <Button Padding="5" FontSize="25" Click="BtnTrash_OnClick" Name="BtnTrash">Очистить список</Button>
        </StackPanel>
        </StackPanel>
    </Grid>
</Window>
